<view class='LineLayout'></view>
<!--业务名称-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>业务名称</text>
  <input class="InputEditText" placeholder="{{ServiceName}}" placeholder-style="color:#DADADA" bindinput="输入名称"/> 
</view>
<!-- 业务类别
<view class='InputTitleLayout'>
  <text class='InputTitleText'>业务类别</text>
   <text class='ContextText'>不可更改</text> 
</view> -->
<!--业务地点-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>业务地点</text>
  <input class="InputEditText" placeholder="{{ServicePlace}}" placeholder-style="color:#DADADA" bindinput="输入地点"/> 
  <image class='PlaceImage' src='/images/map.png' bindtap='点击选择地点'></image>
</view>
<!--业务详情-->
<view class="ServiceDetailLayout">
  <text class='InputTitleText'>业务详情</text>
  <textarea class='InputContextText' bindblur="bindTextAreaBlur" auto-height bindinput="输入详情" value="{{ServiceDetail}}" />
</view>
<view class='LineLayout2'></view>
<!--联系人姓名-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>联系人姓名</text>
  <input class="InputEditText" placeholder="{{ContactName}}" placeholder-style="color:#DADADA" bindinput="输入姓名"/> 
</view>
<!--联系人电话-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>联系人电话</text>
  <input class="InputEditText" placeholder="{{ContactPhone}}" placeholder-style="color:#DADADA" bindinput="输入电话"/> 
</view>
<view class='LineLayout2'></view>
<!--图片展示-->
<text class='InputTitleText'>图片展示</text>
<view class='PhotoShowLayout'>
  <image class="{{image_photo!=null?'ShowPhotoImage':'HidePhotoImage'}}" src='{{image_photo}}'></image> 
  <image class='TakePhotoImage' src='/images/takephoto.png' bindtap='拍摄照片'></image> 
</view>
<!--底部发布-->
<view class='BottomDelServiceLayout' bindtap='点击删除服务'><text class='NewServiceText'>删除业务</text></view>
<view class='BottomUpdataServiceLayout' bindtap='点击更新服务'><text class='NewServiceText'>更新业务</text></view>