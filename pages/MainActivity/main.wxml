<!--index.wxml-->
<scroll-view class="ScrollLayout" scroll-y="true" scroll-top="0">
  <!--顶部轮播展示图-->
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
      <block wx:for="{{DynamicAdUrl}}" wx:for-index="index"  wx:key="">    
        <swiper-item>    
          <image src="{{item.image_url}}" class="slide-image" mode="aspectFill"/>    
        </swiper-item>    
      </block>    
    </swiper> 
  <!--中部类别选项-->    
  <view class='CategoryLayout'>
    <!-- 上层菜单 -->
    <view class='CategorySingerLayout'>
        <view class='CategoryItemLayout' bindtap='点击奢侈品'>
          <image class='CategoryItemImage' src='/images/P1.png'></image>
          <text class='CategoryItemText'>奢侈品</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击酒水'>
          <image class='CategoryItemImage' src='/images/P2.png'></image>
          <text class='CategoryItemText'>酒水</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击保健品'>
          <image class='CategoryItemImage' src='/images/P3.png'></image>
          <text class='CategoryItemText'>保健品</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击汽车'>
          <image class='CategoryItemImage' src='/images/P4.png'></image>
          <text class='CategoryItemText'>汽车</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击家装'>
          <image class='CategoryItemImage' src='/images/P5.png'></image>
          <text class='CategoryItemText'>家装</text>
        </view>
    </view>
    <!-- 下层菜单 -->
    <view class='CategorySingerLayout'>
        <view class='CategoryItemLayout' bindtap='点击财务会计'>
          <image class='CategoryItemImage' src='/images/P6.png'></image>
          <text class='CategoryItemText'>财务会计</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击广告传媒'>
          <image class='CategoryItemImage' src='/images/P7.png'></image>
          <text class='CategoryItemText'>广告传媒</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击法律顾问'>
          <image class='CategoryItemImage' src='/images/P8.png'></image>
          <text class='CategoryItemText'>法律顾问</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击投资担保'>
          <image class='CategoryItemImage' src='/images/P9.png'></image>
          <text class='CategoryItemText'>投资担保</text>
        </view>
        <view class='CategoryItemLayout' bindtap='点击更多'>
          <image class='CategoryItemImage' src='/images/P10.png'></image>
          <text class='CategoryItemText'>更多</text>
        </view>
    </view>
  </view>
  <!-- 中下固定广告页-->
   <image class='AdLayoutImage' src='{{StaticAdUrl}}'></image> 
  <!-- 底部推荐信息-->
  <view class='BottomRectLayout'><text class='GroomActivityText'>推荐活动</text></view>
  <block wx:for="{{ActivityInfo}}" wx:key="id"> 
    <view class='ActivityInfoLayout' data-numid="{{index}}" bindtap="点击指定推荐活动">
      <!--推荐活动图片-->
      <image class='ActivityImage' src='{{item.activity_images[0].current_url}}'></image>
      <!--推荐活动内容-->
      <view class='ActivityContextLayout'>
        <text class='ActivityTitleText'>{{item.title}}</text>
        <text class='ActivityDetailText'>{{item.detail}}</text>
        <view class='BottomItemLayout'>
          <image class='BottomItemImage' src='/images/people.png'></image>
          <text class='BottomItemText'>{{item.contact_name}}</text>
          <image class='BottomItemImage' src='/images/place.png'></image>
          <text class='BottomItem2Text'>{{item.address_name}}</text>
        </view>
      </view>
    </view>
  </block> 
</scroll-view>   