.LineLayout{
  display: flex;
  width: 100%;
  height: 10rpx;
  background-color: #F3F5F7;
}
.InputTitleLayout{
  display: flex;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  align-items: center; 
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.InputTitleText{
  font-size: 16px;
  color: black;
  font-weight:bold;
  margin-left: 50rpx;
  width: 180rpx;
}
.SingerEndLayout{
  display: flex;
  width: 80%;
  flex-direction: row;
  justify-content: flex-end;          
}
.ShowPhotoImage{
  display: flex;
  width: 80rpx;
  height: 80rpx;
  margin-right: 50rpx;
}
.SingerContextText{
  font-size: 16px;
  color: gainsboro;
  margin-right: 50rpx;
}
