<view class='LineLayout'></view>
<!--店铺名称-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>店铺名称</text>
  <input class="InputEditText" placeholder="{{shopInfo.shop_name!=''?shopInfo.shop_name:'请输入店铺名称'}}" placeholder-style="color:#DCDCDC" bindinput="输入店铺名称"/> 
</view>
<!--店铺详情-->
<view class="ServiceDetailLayout">
  <text class='InputTitleText'>店铺详情</text>
  <textarea class='InputContextText' bindblur="bindTextAreaBlur" auto-height bindinput="输入店铺详情" value="{{shopInfo.shop_detail!=''?shopInfo.shop_detail:''}}"/>
</view>
<!--店铺地点-->
<view class='InputTitleLayout' bindtap='点击选择地点'>
  <text class='InputTitleText'>店铺地点</text>
  <view class='SingerEndLayout'>
    <text class='PlaceText'>{{shopInfo.address_name}}</text>
    <image class='SingerRightImage' src='/images/right.png'></image>
  </view>
</view>
<view class='LineLayout'></view>
<view class='LineLayout'></view>
<!--店铺优惠-->
<view class='InputTitleLayout'>
  <text class='InputTitleText'>店铺优惠</text>
  <input class="InputEditText" placeholder="{{shopInfo.shop_discount!='无'?shopInfo.shop_name:'可填写优惠'}}" placeholder-style="color:#DCDCDC" bindinput="输入店铺优惠"/> 
</view>

<!--图片展示-->
<text class='InputTitleText'>图片展示</text>
<view class='PhotoShowLayout'>
  <block wx:for="{{shopInfo.shop_images}}" wx:key="index">
    <image class='ShowPhotoImage' src='{{item.current_url}}' mode="aspectFit"></image>
  </block>
  <image class='TakePhotoImage' src='/images/takephoto.png' bindtap='拍摄照片'></image> 
</view>