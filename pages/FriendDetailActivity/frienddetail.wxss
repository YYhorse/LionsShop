.SingerLayout{
  display: flex;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.ActivityStatusImage{
  width:  80rpx;
  height: 80rpx;
}
.ActivityTitleText{
  font-size: 20px;
  color: black;
  font-weight: bold;
  margin-left: 10rpx;
}
.PlaceImage{
   display: flex;
   width: 40px;
   height: 30px;
   margin-right: 30rpx;
}
.LogoImage{
  display: flex;
  width:  40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.LogoTitleText{
  font-size: 16px;
  color: black;
  margin-left: 20rpx;
  font-weight: bold;
  width: 180rpx;
}
.AddressContextText{
  width: 70%;
  font-size: 16px;
  color: gray;
  margin-left: 40rpx;
}
.SingerEndLayout{
  display: flex;
  width: 10%;
  flex-direction: row;
  justify-content:flex-end;           
}
.SingerRightImage{
  width:  40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.LogoContextText{
  width: 70%;
  font-size: 16px;
  color: gray;
  margin-left: 20rpx;
}
.CallMe{
  margin-left: 200rpx;
  margin-right: 10rpx;  
  width: 20%;  
  line-height: 60rpx;  
  text-align: center;
  background-color: #098E1B;
  border: 1px solid #ededed;  
  border-radius: 20rpx; 
}
.CallMeText{
  font-size: 16px;
  color: white;
}
.DetailLayout{
  display: flex;
  width: 100%;
  flex-direction: column;
  background-color: #F0F0F0;
}
.DetailTitle{
  font-size: 13px;
  color: black;
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-weight: bold;
}
.DetailContext{
  font-size: 13px;
  color: gray;
  margin-left: 50rpx;
}

.BottomNewServiceLayout{
  display:flex;
  position: fixed;
  left: 0px;
  bottom: 0px;
  z-index: 50;
  width: 100%;
  height: 48px;
  background-color: #E51C23;
  flex-direction:row;
  align-items: center;
  justify-content:center;
}
.NewServiceText{
  font-size: 20px;
  font-weight: bold;
  color: white;
}
