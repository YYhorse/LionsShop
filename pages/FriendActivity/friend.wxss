.TopLayout{
  display: flex;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
}
.UserImage{
  display: flex;
  width:  65rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.UserName{
  font-size: 25rpx;
  color: #596891;
  font-weight: bold;
  width: 90%;
}
.TitleText{
  font-size: 30rpx;
  color: black;
  width: 90%;
}
.ActivityStatue{
  width: 10%;
  height: 70rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.MiddenLayout{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
}
.ShowPhotoImage{
  display: flex;
  width: 50%;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.MiddleLayout{
  width: 98%;
  height: 400rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 20rpx;    
}
.BottomLayout{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.HideBottomLayout{
  display: none;
}
.ItemLayout{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: left;
  margin-left: 15rpx;
}
.ItemLayout2{
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.ItemLayout3{
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 10rpx;
  justify-content: flex-end;   
}
.BottomItemImage{
  width:  30rpx;
  height: 30rpx;
}
.BottomItemText{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  
  font-size: 25rpx;
  color: #d3d3d3;
  margin-left: 10rpx;
}
.BottomLine{
  width: 100%;
  height: 1rpx;
  margin-top: 2rpx;
  background-color: #d3d3d3;
}
.PushView{
  display:flex;
  position: fixed;
  right: 20px;
  bottom: 100px;
  z-index: 50;
  width: 50px;
  height: 50px;
  background-color: #E51C23;
  border-radius: 50%;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.PushButton{
   display:flex;
   width: 25px;
   height: 25px;
}
.PushText{
  font-size: 10px;
  color: white;
}