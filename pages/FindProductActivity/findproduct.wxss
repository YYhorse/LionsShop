.ProductSingerLayout{
  display: flex;
  width: 100%;
  height: 200rpx;
  flex-direction: row;
  background-color: white;
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.ProductImageView{
  display: flex;
  width: 50%;
  height: 100%;
  margin-left: 10rpx;
  border-radius: 5%;
}
.ProductContextLayout{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  margin-left: 10rpx;
}
.ProductTitleText{
  display: flex;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  
  font-size: 20px;
  font-weight:bold;
  color: black;
  margin-left: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.ProductPriceLayout{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.PriceText1{
  font-size: 13px;
  color: #101010;
}
.PriceText2{
  font-size: 15px;
  color: #E51C23;
  margin-left: 10rpx;
}
.Linecss{
  display: flex;
  height: 1rpx;
  background: #888888;
  flex-direction: column;
  justify-content:center;
  margin-left: 10rpx;
}
.PriceText3{
  font-size: 15px;
  color: #CDCDCD;
}
.HideShow{
  display: none;
}
.NoStoreText{
  font-size: 20px;
  color: gainsboro;
  margin-left: 50rpx;
  margin-top: 20rpx;
}
.NoProductImage{
  display: flex;
  width:  50px;
  height: 50px;
  margin-top: 50rpx;
}
.ShowNoProductText{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}